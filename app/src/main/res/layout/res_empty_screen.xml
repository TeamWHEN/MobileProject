<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/EmptyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emptyImageView0"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_mood_black_48dp" />

        <TextView
            android:id="@+id/emptyTextView0"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/nogroup_msg"
            android:textColor="@color/alpha4"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emptyImageView1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_group_add_black_48dp" />

        <ImageView
            android:id="@+id/emptyImageView2"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/tail_arrow" />
    </LinearLayout>
</LinearLayout>