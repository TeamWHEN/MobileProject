<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Tabbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/Tabbar_Tab0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_btn"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Tabbar_Image0"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_date_range_white_24dp" />

        <View
            android:id="@+id/Tabbar_Line0"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Tabbar_Tab1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_btn"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Tabbar_Image1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_assignment_white_48dp" />

        <View
            android:id="@+id/Tabbar_Line1"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Tabbar_Tab2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_btn"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Tabbar_Image2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_group_white_24dp" />

        <View
            android:id="@+id/Tabbar_Line2"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>

</LinearLayout>